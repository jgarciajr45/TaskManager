@model IEnumerable<TaskManager.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.UserId">Details</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.UserId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

